header.header.js-header
	.container-fluid
		.row
			.col-12
				.header__content
					.header__logo
						a(href="/")
							span.d-none.d-lg-block
								img(src="assets/img/logo.svg", alt="")

							span.d-lg-none
								img(src="assets/img/logo-mobile.svg", alt="")

					.ic-hamburger.d-md-none.js-open-main-menu
						span

					.main-menu-wrap.js-main-menu-wrap
						.ic-hamburger.active.d-md-none.js-close-main-menu
							span
							
						ul.main-menu
							li.main-menu__item
								a(href="/")
									+svg('ic-home','ic-home', '24', '25')
							-
								var list=[
									{text:'История'},
									{text:'Портфель'},
									{text:'О компании'},
									{text:'Контакты'},
								]
							each item in list
								li.main-menu__item
									a(href="#").main-menu__link= item.text
