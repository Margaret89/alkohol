include ../utils/mixins
block variables

doctype html
html(lang='ru')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title #{title}

	body.js-body
		//- .bg-shadow.active
		.wrapper
			.wrapper__text
				block label

			include ./header
			main
				block breadcrumb
				if h1
					+h1(h1)
				block content
			include ./footer
